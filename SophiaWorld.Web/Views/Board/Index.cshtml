@{
    ViewData["Title"] = "💬 게시판";
}

<div class="container py-4">
    <h2 class="mb-4 text-center">💬 자유 게시판</h2>

    <div class="text-end mb-3">
        <button class="btn btn-pink" data-bs-toggle="modal" data-bs-target="#createModal">+ 새 글 작성</button>
    </div>

    <table id="boardTable" class="table table-bordered bg-white cute-card">
        <thead>
            <tr>
                <th style="width:80px;">번호</th>
                <th>제목</th>
                <th style="width:200px;">작성일</th>
                <th style="width:100px;">삭제</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- 작성 모달 -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">새 게시글 작성</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="boardTitle" class="form-control mb-2" placeholder="제목 입력">
                <textarea id="boardContent" class="form-control" rows="5" placeholder="내용 입력"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                <button id="btnSaveBoard" class="btn btn-pink">등록</button>
            </div>
        </div>
    </div>
</div>

<!-- 수정 모달 -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">게시글 수정</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editBoardId">
                <input type="text" id="editBoardTitle" class="form-control mb-2" placeholder="제목 수정">
                <textarea id="editBoardContent" class="form-control" rows="5" placeholder="내용 수정"></textarea>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                <button id="btnUpdateBoard" class="btn btn-pink">저장</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/board.js"></script>
}
